######################
# - Conky settings - #
######################
update_interval 1
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1
imlib_cache_size 0
double_buffer yes
no_buffers yes

#####################
# - Text settings - #
#####################
use_xft yes
xftfont Liberation Sans:size=10
override_utf8_locale yes
text_buffer_size 2048

#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_colour 333333 
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
alignment top_right
gap_x 15
gap_y 40
minimum_size 800 1200
maximum_width 300 
default_bar_size 100 15 

#########################
# - Graphics settings - #
#########################
draw_shades no
default_color cccccc

##############
# - Colors - #
##############
color0 D3D3D3 # Light Grey
color1 white
color2 999999 # Dark Grey
color3 2B3856 # Dark Slate Blue 
color4 7F4E52 # Rosy Finch
 
TEXT

#############
# - CLOCK - #
#############
${voffset -5}${alignc 27}${color4}${font Arial Black:size=20}${time %H:%M}${font}${color}
${color4}${alignc}${time %d %B %Y}

